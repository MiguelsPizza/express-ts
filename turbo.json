{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "ENV",
    "LOG_LEVEL",
    "DEBUG",
    "npm_package_version"
  ],
  "tasks": {
    "start": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false,
      "outputs": ["dist/**", "bin/**", ".next/**", "!.next/cache/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["dist/**", "bin/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": true,
      "persistent": true,
      "outputs": ["dist/**", ".next/**"]
    },
    "e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    }
  }
}